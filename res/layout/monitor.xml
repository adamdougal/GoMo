<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/layoutWrapper">

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout"
                android:useDefaultMargins="true" android:layout_margin="5dp" android:paddingBottom="5dp"
                android:orientation="horizontal">
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:id="@+id/progressBarLayout">
        <ProgressBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:max="100"/>
    </RelativeLayout>

</FrameLayout>