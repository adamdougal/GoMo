<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_row="6" android:layout_column="0">

    <Button
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:text="-"
            android:singleLine="false" android:focusable="false"
            android:onClick="removeAvatarInputClick"
            android:layout_marginRight="5dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6" android:layout_column="0" android:textSize="14dp"
            android:textIsSelectable="false" android:layout_marginRight="5dp"


            android:width="70dp" android:singleLine="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6" android:layout_column="0" android:textSize="14dp"
            android:textIsSelectable="false" android:layout_weight="1"

            />
</LinearLayout>